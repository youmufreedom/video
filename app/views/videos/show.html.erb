<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <% if @video_path.present? %>
      <video controls class="w-full h-auto bg-black">
        <source src="<%= @video_path %>" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    <% else %>
      <p>No video file found.</p>
    <% end %>

    <h1 class="text-2xl font-semibold mt-4"><%= @video.title %></h1>
    <p class="mt-2"><%= @video.description %></p>

    <%= link_to 'Back to Videos', videos_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
